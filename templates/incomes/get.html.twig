{% extends 'base.html.twig' %}

{% block title %}Get Income {{ income.id }}{% endblock title %}

{% block body %}
    <h1>Get Income {{ income.id }}</h1>

    <p>{{ income.name }}</p>

    <p><a href="{{ path('app_incomes_edit', {'id': income.id}) }}"><button class="btn btn-primary">Éditer</button></a></p>

    <form method="post" action="{{ path('app_incomes_delete', {'id': income.id}) }}" style="display: inline-block;">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ income.id) }}">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?')">Supprimer</button>
    </form>

    <p><a href="{{ path('app_incomes_list') }}"><button>Retour</button></a></p>
{% endblock body %}
